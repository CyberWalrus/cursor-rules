{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "lib",
        "typeRoots": [
            "./types"
        ],
        "baseUrl": "./",
        "paths": {
            "$*": [
                "example/*"
            ]
        }
    },
    "include": [
        "src",
        "end-to-end",
        "types",
        "./*.ts",
        "./*.tsx",
        "./*.mts",
        "./*.js",
        "./*.jsx",
        "./*.cjs",
        "./*.mjs"
    ],
    "exclude": [
        "node_modules",
        "__generated__",
        ".husky",
        ".vscode",
        "__screenshots-reference__",
        "__e2e-trace__",
        "__screenshots-current__",
        "build",
        "ci",
        "dev",
        "build-stats",
        "docker",
        "public",
        "dist",
        "lib",
        ".VSCodeCounter"
    ]
}